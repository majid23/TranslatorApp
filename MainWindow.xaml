<Window x:Class="LLMTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LLMTranslator"
        mc:Ignorable="d"
        Title="Translator App" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10" HorizontalAlignment="Center" >
            <TextBlock Text="From:" VerticalAlignment="Center"/>
            <ComboBox x:Name="SourceLangBox" Width="80" IsEditable="True" Margin="5" SelectionChanged="SourceLang_Changed">
                <ComboBoxItem Content="fa" />
                <ComboBoxItem Content="ar" />
                <ComboBoxItem Content="en" />
            </ComboBox>
            <TextBlock Text="To:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <ComboBox x:Name="TargetLangBox" Width="80" IsEditable="True" Margin="5" SelectionChanged="TargetLang_Changed">
                <ComboBoxItem Content="fa" />
                <ComboBoxItem Content="ar" />
                <ComboBoxItem Content="en" />
            </ComboBox>
            <Button Click="Reverse_Click" Width="100">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⇄" Margin="0,0,5,0"/>
                    <TextBlock Text="Swap"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- ورودی -->
        <DockPanel Grid.Row="1" LastChildFill="True">
            <Button DockPanel.Dock="Right" Content="📋" Margin="5,0,0,0" Click="CopyInput_Click" VerticalAlignment="Top" Width="30" ToolTip="Copy input"/>
            <TextBox DockPanel.Dock="Left" x:Name="InputTextBox" AcceptsReturn="True" TextWrapping="Wrap" Height="100" VerticalScrollBarVisibility="Auto"/>
        </DockPanel>

        <!-- دکمه ترجمه -->
        <Button Content="Translate" Grid.Row="2" Margin="0,10" Height="40" Click="Translate_Click"/>

        <!-- خروجی -->
        <DockPanel Grid.Row="3" LastChildFill="True">
            <Button Content="📋" DockPanel.Dock="Right" Margin="5,0,0,0" Click="CopyOutput_Click" VerticalAlignment="Top" Width="30" ToolTip="Copy output"/>
            <TextBox DockPanel.Dock="Left" x:Name="OutputTextBlock" TextWrapping="Wrap" Height="100" VerticalScrollBarVisibility="Auto" Margin="0,10"/>
        </DockPanel>

        <!-- پاورقی -->
        <TextBlock Grid.Row="4" HorizontalAlignment="Right" Foreground="Gray" FontSize="10">
            Powered by facebook/m2m100_418M + WPF
        </TextBlock>
    </Grid>
</Window>
